[Unit]
Description=Backs up configured directories via duplicity
Wants=backup.timer

[Service]
Type=simple
EnvironmentFile=%h/.config/systemd/user/backup.env
# backup.env is generated by install_duplicity.sh with absolute paths.
ExecStart=%h/bin/backup -l 10 $BACKUP_SOURCES

[Install]
WantedBy=default.target
